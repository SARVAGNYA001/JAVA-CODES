import java.util.*;

public class Main {
    public static void main(String[] args) {
        int n;
        int temp = 0;
        Scanner sc = new Scanner(System.in);
        n = sc.nextInt();
        for (int i = 1; i <= n; i++) {
            int digit = n % 10;
            temp += digit;
            n /= 10;
        }
        System.out.println(temp);
    }
}
/no of digits
